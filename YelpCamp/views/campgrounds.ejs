<% include partials/header %>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">
        YelpCamp
    </a>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="/register">Sign Up</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
            </li>
        </ul>
    </div>
</nav>

<div class="container">
    <header class="jumbotron">
        <div class="hero-body">
            <h1 class="title">This is the campgrounds page</h1>
                
            <a class="btn btn-primary" href="/campgrounds/new">Add new Campground</a>
        </div>
    </header>
    
    <div class="row">
        <% campgrounds.forEach(function(campground){%>
            <div class="col-12 col-sm-3 mt-2">
                <div class="card text-center">
                    <img class="card-img-top img-fluid img-thumbnail" src="<%= campground.image %>" alt="<%= campground.name %>">
                    <div class="card-body">
                        <h4 class="card-title"><%= campground.name %></h4>
                        <a class="btn btn-info" href="/campgrounds/<%= campground.id %>">More Info</a>
                    </div>
                </div>
            </div>
        <%}); %>
    </div>



    <a href="/">Go home</a>

</div>

<% include partials/footer %>